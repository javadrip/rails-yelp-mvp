<h1>Restaurants#show</h1>
<p>Find me in app/views/restaurants/show.html.erb</p>

<h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.category %></p>
  <p><%= @restaurant.phone_number %></p>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><strong><%= review.rating %> star</strong><br><%= review.content %></li>
  <% end %>
</ul>
<br>

<%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>
<%= link_to "Back to list of restaurant", restaurants_path %>
